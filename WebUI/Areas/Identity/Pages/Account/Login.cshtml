@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="POST">
                <h2>Use Local account to log on</h2>
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating" style="margin:10px">
                    <input asp-for="Input.LoginName" class="form-control" autocomplete="username" aria-required="true"></input>
                    <label asp-for="Input.LoginName" class="form-label"></label>
                    <span asp-validation-for="Input.LoginName" class="text-danger"></span>
                </div>
                <div style="margin:10px">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
                </div>

            </form>
        </section>
    </div>
</div>